<div class="admin-page">
  <div class="admin-container">
    <div class="admin-header">
      <h1>All Orders</h1>
      <p>Manage and view all customer orders</p>
    </div>

    <div class="admin-content">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Order</th>
              <th>Customer</th>
              <th>Items</th>
              <th>Total</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><strong><%= order.id %></strong></td>
                <td>
                  <div>
                    <strong><%= order.user.name %></strong>
                    <br>
                    <small class="text-muted"><%= order.user.email %></small>
                  </div>
                </td>
                <td>
                  <div class="order-items-summary">
                    <% order.order_items.limit(3).each do |item| %>
                      <div class="order-item-summary">
                        <span><%= item.product.name %></span>
                        <span>Ã—<%= item.quantity %></span>
                      </div>
                    <% end %>
                    <% if order.order_items.count > 3 %>
                      <small class="text-muted">+<%= order.order_items.count - 3 %> more items</small>
                    <% end %>
                  </div>
                </td>
                <td>
                  <strong class="price">$<%= number_with_precision(order.total_amount, precision: 2) %></strong>
                </td>
                <td>
                  <small><%= order.created_at.strftime("%b %d, %Y") %></small>
                  <br>
                  <small class="text-muted"><%= order.created_at.strftime("%I:%M %p") %></small>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to "View", admin_order_path(order), class: "btn btn-sm btn-outline-info" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 
