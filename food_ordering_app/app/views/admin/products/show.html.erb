<% content_for :title, "Product" %>

<div class="admin-page">
  <div class="admin-container">
    <div class="admin-header">
      <h1>Product Details</h1>
      <p>View product information</p>
    </div>

    <div class="admin-content">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <% if @product.image.attached? %>
                <%= image_tag @product.image, alt: @product.name, class: "product-detail-image" %>
              <% else %>
                <div class="no-image-large">No Image</div>
              <% end %>
            </div>
            <div class="col-md-8">
              <h2 class="mb-3"><%= @product.name %></h2>
              
              <div class="product-info">
                <div class="info-row">
                  <span class="info-label">Category:</span>
                  <span class="badge bg-info"><%= @product.category %></span>
                </div>
                
                <div class="info-row">
                  <span class="info-label">Diet:</span>
                  <span class="badge bg-success"><%= @product.diet %></span>
                </div>
                
                <div class="info-row">
                  <span class="info-label">Price:</span>
                  <span class="price-large">$<%= number_with_precision(@product.price, precision: 2) %></span>
                </div>
                
                <div class="info-row">
                  <span class="info-label">Description:</span>
                  <p class="description-text"><%= @product.description %></p>
                </div>
              </div>
              
              <div class="product-actions mt-4">
                <%= link_to "Edit Product", edit_admin_product_path(@product), class: "btn btn-primary me-2" %>
                <%= link_to "Back to Products", admin_products_path, class: "btn btn-secondary me-2" %>
                <%= button_to "Delete Product", admin_product_path(@product), method: :delete, 
                    class: "btn btn-danger", 
                    data: { confirm: "Are you sure you want to delete this product?" } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
