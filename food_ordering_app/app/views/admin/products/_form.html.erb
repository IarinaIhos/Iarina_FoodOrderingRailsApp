<%= form_with(model: [:admin, product], local: true) do |form| %>
  <% if product.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(product.errors.count, "error") %> Product could not be saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="product-form">
    <div class="form-group">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :category, style: "display: block" %>
      <%= form.select :category, options_for_select(Product.categories.keys.map { |c| [c.titleize, c] }, product.category), include_blank: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :diet, style: "display: block" %>
      <%= form.select :diet, options_for_select(Product.diets.keys.map { |d| [d.titleize, d] }, product.diet), include_blank: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :price, style: "display: block" %>
      <%= form.number_field :price, step: 0.01, min: 0, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :image, style: "display: block" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <div>
      <%= form.submit "Save Product", class: "submit-button" %>
    </div>
  </div>
<% end %>
