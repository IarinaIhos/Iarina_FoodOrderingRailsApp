<%= form_with(model: [:admin, product], local: true) do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h4>
      <ul class="mb-0">
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :category, class: "form-label" %>
        <%= form.select :category, options_for_select(Product.categories.keys.map { |c| [c.titleize, c] }, product.category), 
            { include_blank: "Select a category" }, { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= form.label :diet, class: "form-label" %>
        <%= form.select :diet, options_for_select(Product.diets.keys.map { |d| [d.titleize, d] }, product.diet), 
            { include_blank: "Select a diet type" }, { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= form.label :price, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <%= form.number_field :price, step: 0.01, min: 0, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, rows: 4, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :image, class: "form-label" %>
        <%= form.file_field :image, class: "form-control", accept: "image/*" %>
        <div class="form-text">Upload a product image (JPG, PNG, GIF)</div>
      </div>

      <% if product.image.attached? %>
        <div class="mb-3">
          <label class="form-label">Current Image:</label>
          <div class="current-image">
            <%= image_tag product.image, alt: product.name, class: "product-thumbnail" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="d-flex gap-2 mt-4">
    <%= form.submit product.new_record? ? "Create Product" : "Update Product", class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_products_path, class: "btn btn-secondary" %>
  </div>
<% end %>
