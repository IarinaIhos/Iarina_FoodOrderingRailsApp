<div class="item <%= product.category %>">
  <%= image_tag product.image, alt: product.name, class: "item-img" if product.image.attached? %>
  <h3><%= product.name %></h3>
  <p><%= product.description %></p>
  <div class="item-footer">
    <span class="price">$<%= number_with_precision(product.price, precision: 2) %></span>
    <span class="diet-type"><%= product.diet %></span>
  </div>
  <%= link_to "Edit", edit_admin_product_path(product), class: "back-btn " %> |
  <%= link_to "Delete", admin_product_path(product), method: :delete, data: { confirm: "Are you sure?" }, class: "back-btn " %>
</div>
