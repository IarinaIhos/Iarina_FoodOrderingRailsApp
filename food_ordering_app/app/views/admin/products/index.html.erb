<div class="admin-page">
  <div class="admin-container">
    <div class="admin-header">
      <h1>Product Management</h1>
      <p>Manage all products in the system</p>
    </div>

    <div class="admin-content">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>All Products</h3>
        <%= link_to "Add New Product", new_admin_product_path, class: "btn btn-primary" %>
      </div>

      <% if @products.present? %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Diet</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td>
                    <% if product.image.attached? %>
                      <%= image_tag product.image, alt: product.name, class: "product-thumbnail" %>
                    <% else %>
                      <div class="no-image">No Image</div>
                    <% end %>
                  </td>
                  <td><strong><%= product.name %></strong></td>
                  <td><%= truncate(product.description, length: 100) %></td>
                  <td><span class="price">$<%= number_with_precision(product.price, precision: 2) %></span></td>
                  <td>
                    <span class="badge bg-info"><%= product.category %></span>
                  </td>
                  <td>
                    <span class="badge bg-success"><%= product.diet %></span>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <%= link_to "View", admin_product_path(product), class: "btn btn-sm btn-outline-info" %>
                      <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-sm btn-outline-primary" %>
                      <%= button_to "Delete", admin_product_path(product), method: :delete, 
                          class: "btn btn-sm btn-outline-danger", 
                          data: { confirm: "Are you sure you want to delete this product?" } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <h4>No products found</h4>
          <p class="text-muted">Get started by adding your first product.</p>
          <%= link_to "Add New Product", new_admin_product_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
